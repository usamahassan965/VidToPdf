<Screenrecordmenu>
    name: 'screen1'
    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.7, 1  # Set the background color to white (RGBA format)
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size

        Label:
            text: 'Welcome to screen recorder app'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size: (self.height / 20) * 0.75
            color: 0, 0, 0, 1  # Set font color to black


        Label:
            text: 'Input Filename:'
            pos_hint: {'center_x': 0.3, 'center_y': 0.7}
            font_size: (self.height / 20) * 0.65
            color: 0, 0, 0, 1  # Set font color to black

        Label:
            text: 'Recording Time:'
            pos_hint: {'center_x': 0.3, 'center_y': 0.6}
            font_size: (self.height / 20) * 0.65
            color: 0, 0, 0, 1  # Set font color to black

        TextInput:
            id: screenrecordname
            size_hint: 0.4, 0.08
            pos_hint: {'center_x': 0.7, 'center_y': 0.7}

        TextInput:
            id: screenrecordmin
            size_hint: 0.4, 0.08
            pos_hint: {'center_x': 0.7, 'center_y': 0.6}

        Button:
            text: 'Screen Record'
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_release: root.screenrecord()
